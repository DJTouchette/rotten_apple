<%if session[:user_id]%>
  <%user = User.find(session[:user_id])  %>
<%end%>
<hr>
<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <%= link_to image_tag(@movie.image), movie_path(@movie) %>
    </div>
  <div class="col-xs-6">
    <h2><%= @movie.title %> <%if user.admin %>
    (<%= link_to "edit", edit_movie_path(@movie) %>, <%= link_to "delete", movie_path(@movie), method: :delete, data: { confirm: "You sure?" } %>
      ) <%end%><br> <% @movie.review_average.times do%>
      <img class="ratings" src="http://www.clker.com/cliparts/G/5/8/9/y/b/apple-core-md.png">
       <%end%>
    </h2>
    <h3><%= formatted_date(@movie.release_date) %></h3>
    <h4>Dir. <%= @movie.director %> | <%= @movie.runtime_in_minutes %> minutes</h4>
    <p><%= @movie.description %></p>
  </div>
  <hr>
  <div class="col-xs-6">
    <h3>Reviews of <em><%= @movie.title %></em></h3>
    <hr>
    <% if current_user %>
      <% @movie.reviews.each do |review| %>
      <p><%= review.text %></p>
      <p><%= review.rating_out_of_ten %>/10</p>
      <small>- <%= review.user.email %></small><br/>
      <hr>
    <% end %>
  </div>
  <div class="col-xs-4 pull-right">
    <p></span><%= link_to "Write a review!", new_movie_review_path(@movie) %></p>
  <% else %>
  <p>Please <%= link_to "log in", new_session_path %> to see reviews and add your own.</p> 
  <% end %>
  </div>
  </div>
  </div>
  </div>

    
